#!/bin/sh

_error() {

  local readonly msg="$1"

  echo "."
  echo "."
  echo "bungalow >> [Error] << ${msg}"
  echo "."
  echo "."

  return 1
}


_error_fatal() {

  local readonly msg="$1"

  echo "."
  echo "."
  echo "bungalow >> [Fatal Error] << ${msg}"
  echo "."
  echo "."

  exit 1
}


_os_check() {

  . /etc/os-release

  [[ ${1,,} =~ ${ID}${ID:+|}${ID_LIKE// /|} ]] \
    && [[ ${VERSION_ID} =~ ${2,,} ]]           \
    && [[ ${CPE_NAME}   =~ ${3,,} ]]           \
    && return 0

  return 1
}


__bungalow_alpine() {

  source /etc/os-release

  echo
}


__bungalow_centos() {

  echo


  _os_check "centos" "7"
}


__bungalow_debian() {

  echo
}


__bungalow_macos() {

  echo
}


__bungalow_ubuntu() {

  echo
}


[[ -n "$1" ]] && "__bungalow_$1" "$@"

